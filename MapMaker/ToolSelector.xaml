<UserControl x:Class="MapMaker.ToolSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MapMaker"
             mc:Ignorable="d"
             DataContext="{StaticResource MapController}"
             d:DesignHeight="300" d:DesignWidth="300">
    <ListView Background="GhostWhite" 
              BorderBrush="Gainsboro" 
              BorderThickness="1" 
              ItemsSource="{Binding Tools}"
              SelectedItem="{Binding SelectedTool, Mode=TwoWay}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Image Source="{Binding IconName, Converter={StaticResource BindingResourceConverter}}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</UserControl>