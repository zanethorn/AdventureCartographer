<Window x:Class="MapMaker.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MapMaker"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d"
        Title="Color Picker" Height="450" Width="800"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <colorpicker:StandardColorPicker x:Name="Picker" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  IsDefault="True" Content="OK" Click="OnDefault" />
            <Button  IsCancel="True" Content="Cancel"  />
        </StackPanel>
    </StackPanel>
</Window>
