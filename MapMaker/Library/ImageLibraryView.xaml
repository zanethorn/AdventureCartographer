<UserControl x:Class="MapMaker.Library.ImageLibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MapMaker"
             xmlns:library="clr-namespace:MapMaker.Library"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{StaticResource LibraryController}">

    <ListView ItemsSource="{Binding ImageCollections}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <library:ImageCollectionView />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>