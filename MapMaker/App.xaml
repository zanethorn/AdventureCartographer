<Application x:Class="MapMaker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:MapMaker.Views"
             StartupUri="MainWindow.xaml" Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Cursors/Cursors.xaml" />
                <ResourceDictionary Source="Resources/Icons/Icons.xaml" />
                <ResourceDictionary Source="Converters/Converters.xaml" />
                <ResourceDictionary Source="Controllers/Controllers.xaml" />

                <ResourceDictionary Source="Resources/Themes/Metro/Metro.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="Resources/Themes/Metro/Metro.MSControls.Toolkit.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <DataTemplate x:Key="ImageFileTemplate">
                <views:ImageFileView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>