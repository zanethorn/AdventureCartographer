<Application x:Class="MapMaker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MapMaker"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:library="clr-namespace:MapMaker.Library"
             xmlns:file="clr-namespace:MapMaker.File"
             StartupUri="MainWindow.xaml" Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Cursors/Cursors.xaml" />
                <ResourceDictionary Source="Resources/Icons/Icons.xaml" />
                <ResourceDictionary Source="Converters/Converters.xaml" />
                
                <ResourceDictionary Source="Resources/Themes/Metro/Metro.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="Resources/Themes/Metro/Metro.MSControls.Toolkit.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <library:LibraryController x:Key="LibraryController" />
            <file:MapController x:Key="MapController" />

            
            <DataTemplate x:Key="ImageFileTemplate">
                <library:ImageFileView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>