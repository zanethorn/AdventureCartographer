<Application x:Class="MapMaker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MapMaker"
             xmlns:library="clr-namespace:MapMaker.Library"
             xmlns:file="clr-namespace:MapMaker.File"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Themes/aero.normalcolor.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <library:LibraryController x:Key="LibraryController" />
            <file:MapController x:Key="MapController" />
            
            <BitmapImage x:Key="PlusIcon" UriSource="Assets/Icons/plus-box.png" />
            <BitmapImage x:Key="MinusIcon" UriSource="Assets/Icons/minus-box.png" />
            <BitmapImage x:Key="CursorDefault" UriSource="Assets/Icons/cursor-default.png" />
        </ResourceDictionary>
    </Application.Resources>
</Application>