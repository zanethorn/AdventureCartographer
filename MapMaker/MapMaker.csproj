<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <Authors>Zane Thorn</Authors>
        <Company>ThornSoft</Company>
        <Copyright>Zane Thorn 2021</Copyright>
        <PackageProjectUrl>https://github.com/zanethorn/MapMaker</PackageProjectUrl>
        <RepositoryUrl>https://github.com/zanethorn/MapMaker.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <AssemblyVersion>0.1.1.0</AssemblyVersion>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Assets\Icons\cursor-default.png" />
      <None Remove="Assets\Icons\minus-box.png" />
      <None Remove="Assets\Icons\plus-box.png" />
      <None Remove="Resources\Cursors\cursor-default.cur" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="5.0.7" />
      <PackageReference Include="Ookii.Dialogs.Wpf" Version="3.1.0" />
    </ItemGroup>

    <ItemGroup>
      <Resource Include="Resources\Cursors\cursor-default.cur" />
      <Resource Include="Resources\Icons\cursor-default.png" />
      <Resource Include="Resources\Icons\minus-box.png" />
      <Resource Include="Resources\Icons\plus-box.png" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Properties\Settings.Designer.cs">
        <DesignTimeSharedInput>True</DesignTimeSharedInput>
        <AutoGen>True</AutoGen>
        <DependentUpon>Settings.settings</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="Properties\Settings.settings">
        <Generator>PublicSettingsSingleFileGenerator</Generator>
        <LastGenOutput>Settings.Designer.cs</LastGenOutput>
      </None>
    </ItemGroup>

</Project>
