<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:MapMaker.Views">
    <Style TargetType="views:BrushButton" >
        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="views:BrushButton">
                    <Rectangle
                        Fill="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Brush.RenderedBrush}"
                        Stroke="Black"
                        StrokeThickness="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>